<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="NoteTaker.Views.EditNoteView"
		Title="Edit">

		<Grid Margin="0">
			<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="24" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Entry Placeholder="Note Title" Text="{Binding Title}" Margin="8,16" />
		<Editor Text="{Binding Content}" Grid.Row="1" Margin="8" />

		<Button BackgroundColor="Red" Text="Delete" TextColor="White" Grid.Row="3" Command="{Binding DeleteNote}" Margin="-8,0,-8,-6" />
		<Button BackgroundColor="Lime" Text="Store" TextColor="White" Grid.Row="4" Margin="-8,0,-8,0" Command="{Binding SaveNote}" />
	</Grid>
</ContentPage>
